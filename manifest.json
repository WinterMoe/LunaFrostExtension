{
  "manifest_version": 3,
  "name": "LunaFrost Extension",
  "version": "1.0.0",
  "description": "Extract Korean text from Novelpia and send to your novel translator",
  "browser_specific_settings": {
    "gecko": {
      "id": "contact@winter.moe",
      "data_collection_permissions": {
        "required": [
          "websiteContent",
          "personallyIdentifyingInfo"
        ]
      }
    }
  },
  "permissions": [
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "src/popup.html",
    "default_title": "LunaFrost Translator",
    "default_icon": {
      "48": "icons/icon48.png"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "src/csrf.js",
        "src/retry.js",
        "src/content.js"
      ]
    }
  ],
  "icons": {
    "48": "icons/icon48.png"
  }
}